main.main-form
    section.review
        header.review-header
            .review-header__name Оставьте свой отзыв
            .review-header__desc Помогите нашим отелям стать лучше! Оставьте отзыв о них, а также о посещенных вами достопримечательностях
    form.form__list
        .form__item
            .form__common-title.form-introduce__name Представьтесь:
            .form-introduce__list
                .form-introduce__item
                    .form__common-name.form__fname Имя*:
                    input(placeholder='Петр').form-input.form-input__fname
                .form-introduce__item
                    .form__common-name.form__lname Фамилия*:
                    input(placeholder='Иванов').form-input.form-input__lname
                .form-introduce__item
                    .form__common-name.form__mname Отчество:
                    input(placeholder='Александрович').form-input.form-input__mname
        .form__item
            .form__common-title.form-contact__name Контактная информация:
            .form-contact__list
                .form-contact__item
                    .form__common-name.form__tel Контактный телефон*:
                    .input-contact.input-contact_tel
                        input(placeholder='Введите телефон').form-input.form-input__tel
                .form-contact__item
                    .form__common-name.form__email Электронная почта*:
                    .input-contact.input-contact_email
                        input(placeholder='Введите e-mail').form-input.form-input__email
        .form__item
            .form__common-title.form-impression__name Представьтесь:
            .form-impression__list
                .form-impression__item
                    input(type='radio').form-input__radio
                    .form__name Скорее положительное
                .form-impression__item
                    input(type='radio').form-input__radio
                    .form__name Скорее отрицательное
                .form-impression__item
                    input(type='radio').form-input__radio
                    .form__name Затрудняюсь ответить
        .form__item
            .form__common-title.form-landmark__name Представьтесь:
            .form-landmark__list
                .form-landmark__item
                    input(type='checkbox').form-input__checkbox
                    .form__name  Мост Дьявола
                .form-landmark__item
                    input(type='checkbox').form-input__checkbox
                    .form__name Гора-Колокол
                .form-landmark__item
                    input(type='checkbox').form-input__checkbox
                    .form__name Слайд-парк
                .form-landmark__item
                    input(type='checkbox').form-input__checkbox
                    .form__name Красные скалы
    section.feedback
        .emotions__name.form__common-title Опишите свои эмоции
        textarea(placeholder='Опишите подробно все свои восторги')
        button.emotions__btn Отправить отзыв
